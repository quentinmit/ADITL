@package Settings;

use vars qw(%settings);

$settings{"templateLib"} = "/usr/local/aditl2/templates";
$settings{"SMTPHost"} = "outgoing.mit.edu";
$settings{"validateURL"} = "http://aditl.mit.edu/aditl2/dyn/validate";
$settings{"registerURL"} = "http://aditl.mit.edu/aditl2/dyn/register";

sub settings {
    my $setting = shift;
    if(exists($settings{$setting})) {
	return $settings{$setting};
    } else {
	die "$setting is not a valid setting\n";
    }
}




@
